<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backhug"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CartFragment"> <!-- Optional background -->

    <!-- BT Logo -->
    <ImageView
        android:id="@+id/imgBtLogo"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:contentDescription="BT Logo"
        android:scaleType="fitCenter"
        android:src="@drawable/btlogo" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="MY CART"
        android:textAlignment="center"
        android:textColor="@color/ic_launcher_background"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Cart Items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/BienTimpla"
        android:padding="4dp" />

    <!-- Total Amount Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/total_background"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TOTAL:"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="â‚±0.00"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Product List Button -->
    <Button
        android:id="@+id/btnList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="PRODUCT LIST"
        android:textColorLink="@color/ic_launcher_background" />

</LinearLayout>
